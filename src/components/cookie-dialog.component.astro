<dialog class="dialog dialog-cookie" data-element="cookie-dialog">
    <button
      class="btn btn-dialog btn-dialog-close"
      type="button"
      data-element="btn-close"
    >
      <i class="fa-thin fa-sharp fa-xmark"></i>
      <span class="btn__text">Close</span>
    </button>
    <div class="dialog__body | flow">
      <p>
        By continuing to use this site, you agree to our <a href="privacy-policy/">cookie policy</a>. 🍪
      </p>
    </div>
    <footer class="dialog__footer">
      <div class="dialog__buttons">
        <button
          class="btn btn-dialog btn-green btn-sm"
          type="button"
          data-element="btn-yes"
        >
          <i class="fa-thin fa-sharp fa-check"></i> Yes
        </button>
        <button
          class="btn btn-dialog btn-red btn-sm"
          type="button"
          data-element="btn-no"
        >
          <i class="fa-thin fa-sharp fa-xmark"></i> No
        </button>
      </div>
    </footer>
</dialog>